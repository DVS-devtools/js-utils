{
  "name": "@docomodigital/js-logger",
  "version": "1.0.1",
  "description": "Advanced logger used for stable production build",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build:umd": "NODE_ENV=production BUILD_TARGET=umd node ../../scripts/build.js",
    "build:browser": "NODE_ENV=production BUILD_TARGET=browser node ../../scripts/build.js",
    "build": "npm run build:umd && npm run build:browser",
    "start": "NODE_ENV=development node ../../scripts/start.js",
    "test": "node ../../scripts/runTests.js",
    "test:watch": "node ../../scripts/runTests.js --watchAll",
    "test:coveralls": "node ../../scripts/runTests.js --coverageReporters=text-lcov | ../../node_modules/.bin/coveralls"
  }
}
